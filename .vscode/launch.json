    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Chainlit (via UV)",
            "type": "debugpy",
            "request": "launch",

            "module": "uv",
            "args": [
                "run", 
                "chainlit", "run",
                "src/poc_crewai_developers/chainlit_ui_entry.py",
                "--port", "8000"
            ],

            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",

            "justMyCode": false,
        }
    ]
}